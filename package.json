    "micropubs": "cd editors/micropubs && yarn start"
  },
  "dependencies": {},
  "devDependencies": {
    "lerna": "^2.6.0"
  },
  "workspaces": [
    "wax-prosemirror-core/*",
    "wax-prosemirror-schema/*",
    "wax-prosemirror-components/*",
    "wax-prosemirror-themes/*",
    "wax-prosemirror-utilities/*",
    "editors/*"
