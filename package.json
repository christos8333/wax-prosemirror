{
  "name": "wax-prosemirror-monorepo",
  "version": "0.0.1",
  "main": "index.js",
  "author": "Collaborative Knowledge Foundation",
  "description":
    "Monorepo for wax-prosemirror, its components and its integrations",
  "repository": {
    "type": "git",
    "url": "git@gitlab.coko.foundation:wax/wax-prosemirror.git"
  },
  "license": "MIT",
